<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--内容的item嵌套一个recyclerView放图片-->
    <TextView
        android:id="@+id/category_fragment_content_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="123"
        android:textColor="#000000" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/category_fragment_content_img_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_fragment_content_title"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/select_background"
        android:layout_below="@id/category_fragment_content_img_rv"/>




</RelativeLayout>