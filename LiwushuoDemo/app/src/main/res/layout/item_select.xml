<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="6dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/select_fragment_product_img"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/select_fragment_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/select_fragment_product_img"
            android:layout_margin="10dp"
            android:textColor="@color/select_product_name" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/select_fragment_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15312"
                android:textColor="@color/title" />



            <TextView
                android:id="@+id/select_fragment_product_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26345"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/select_product_count"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_small_heart_normal"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/select_fragment_product_size"
                android:paddingRight="10dp"
                />

        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>